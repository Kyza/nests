{
	"name": "nests",
	"version": "1.4.1",
	"description": "Easy state storage with a lot of control.",
	"main": "./lib/cjs/index.js",
	"import": "./lib/esm/index.js",
	"module": "./lib/mjs/index.js",
	"types": "./lib/types/index.d.js",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"default": "./lib/cjs/index.js",
			"module": "./lib/mjs/index.js",
			"import": "./lib/esm/index.js",
			"types": "./lib/types/index.d.ts"
		},
		"./react": {
			"default": "./lib/cjs/react/index.js",
			"module": "./lib/mjs/react/index.js",
			"import": "./lib/esm/react/index.js",
			"types": "./lib/types/react/index.d.ts"
		}
	},
	"sideEffects": false,
	"files": [
		"lib/**/*",
		"README.md"
	],
	"scripts": {
		"build": "npm run build-cjs & npm run build-mjs & npm run build-esm & npm run build-types",
		"build-cjs": "tsc --project tsconfig.cjs.json",
		"build-mjs": "tsc --project tsconfig.mjs.json",
		"build-esm": "tsc --project tsconfig.esm.json",
		"build-types": "tsc --project tsconfig.types.json",
		"dev": "npx swc ./src/ -d ./dev/ --watch",
		"test": "node ./test.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Kyza/nests"
	},
	"bugs": "https://github.com/Kyza/nests/issues",
	"keywords": [
		"flux",
		"redux",
		"nests",
		"state",
		"store",
		"simple",
		"predictable",
		"easy",
		"deep",
		"react",
		"solid",
		"immer"
	],
	"author": "Kyza",
	"license": "MIT",
	"devDependencies": {
		"@swc/cli": "^0.1.49",
		"@swc/core": "^1.2.84",
		"@types/node": "^16.7.13",
		"@types/react": "^17.0.19",
		"@types/react-dom": "^17.0.9",
		"chokidar": "^3.5.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"typescript": "^4.4.2"
	},
	"peerDependencies": {
		"react": ">=16.8"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": true
		}
	}
}
