{
	"compilerOptions": {
		"outDir": "./lib/cjs",
		"target": "ES6",
		"module": "CommonJS",
		"lib": ["ES6", "DOM"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"isolatedModules": true,
		"removeComments": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
